{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "ðŸ“¦Build All",
			"type": "shell",
			"command": "echo 'Building both executables...'",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOn": [
				"ðŸ“¦Build winctrl.exe (Console)",
				"ðŸ“¦Build winctrl_tray.exe (System Tray)"
			],
			"options": {
				"shell": {
					"args": [
						"-NoProfile"
					]
				}
			}
		},
		{
			"label": "ðŸ“¦Build Resources",
			"type": "shell",
			"command": "windres",
			"args": [
				".\\src\\resources.rc",
				"-O",
				"coff",
				"-o",
				"resources\\winctrl.res"
			],
			"group": "build",
			"problemMatcher": [],
			"options": {
				"shell": {
					"args": [
						"-NoProfile"
					]
				}
			}
		},
		{
			"label": "ðŸ“¦Build winctrl.exe (Console)",
			"type": "cppbuild",
			"command": "g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"src/main.cpp",
				"src/hooks.cpp",
				"src/winctrl.cpp",
				"src/helpers.cpp",
				"src/features.cpp",
				"resources/winctrl.res",
				"-o",
				"winctrl.exe",
				"-luser32",
				"-mwindows"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build"
			},
			"dependsOn": [
				"ðŸ›‘Stop winctrl.exe",
				"ðŸ“¦Build Resources"
			]
		},
		{
			"label": "ðŸ“¦Build winctrl_tray.exe (System Tray)",
			"type": "cppbuild",
			"command": "g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"src/tray.cpp",
				"src/hooks.cpp",
				"src/winctrl.cpp",
				"src/helpers.cpp",
				"src/features.cpp",
				"resources/winctrl.res",
				"-o",
				"winctrl_tray.exe",
				"-luser32",
				"-mwindows"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"dependsOn": [
				"ðŸ›‘Stop winctrl_tray.exe",
				"ðŸ“¦Build Resources"
			]
		},
		{
			"label": "ðŸš€Run winctrl.exe",
			"type": "shell",
			"command": ".\\winctrl.exe",
			"group": "test",
			"dependsOn": [
				"ðŸ›‘Stop winctrl.exe"
			],
			"options": {
				"shell": {
					"args": [
						"-NoProfile"
					]
				}
			}
		},
		{
			"label": "ðŸš€Run winctrl_tray.exe",
			"type": "shell",
			"command": ".\\winctrl_tray.exe",
			"group": "test",
			"dependsOn": [
				"ðŸ›‘Stop winctrl_tray.exe"
			],
			"options": {
				"shell": {
					"args": [
						"-NoProfile"
					]
				}
			}
		},
		{
			"type": "shell",
			"label": "ðŸ›‘Stop winctrl.exe",
			"command": "Get-Process -Name winctrl -ErrorAction SilentlyContinue | Stop-Process -Force -ErrorAction SilentlyContinue || $true",
			"group": "test",
			"options": {
				"shell": {
					"args": [
						"-NoProfile"
					]
				}
			}
		},
		{
			"type": "shell",
			"label": "ðŸ›‘Stop winctrl_tray.exe",
			"command": "Get-Process -Name winctrl_tray -ErrorAction SilentlyContinue | Stop-Process -Force -ErrorAction SilentlyContinue || $true",
			"group": "test",
			"options": {
				"shell": {
					"args": [
						"-NoProfile"
					]
				}
			}
		},
		{
			"type": "shell",
			"label": "ðŸ›‘Stop all winctrl processes",
			"command": "echo 'Stopping both processes...'",
			"group": "test",
			"dependsOn": [
				"ðŸ›‘Stop winctrl.exe",
				"ðŸ›‘Stop winctrl_tray.exe"
			],
			"options": {
				"shell": {
					"args": [
						"-NoProfile"
					]
				}
			}
		}
	]
}
