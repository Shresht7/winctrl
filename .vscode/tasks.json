{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "ðŸ“¦Build",
			"command": "g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"src/main.cpp",
				"src/hooks.cpp",
				"src/winctrl.cpp",
				"src/helpers.cpp",
				"-o",
				"winctrl.exe",
				"-luser32",
				"-mwindows"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: g++.exe"
		},
		{
			"type": "shell",
			"label": "ðŸš€Run",
			"command": ".\\winctrl.exe",
		}
	]
}
